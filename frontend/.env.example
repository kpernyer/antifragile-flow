# Frontend Environment Configuration
# Copy this file to .env and update values as needed

# Development server (Create React App default)
PORT=3000

# Backend API Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_FRONTEND_URL=http://localhost:3000

# GraphQL Knowledge Base Configuration
REACT_APP_GRAPHQL_URL=http://localhost:4000
REACT_APP_GRAPHQL_ENDPOINT=http://localhost:4000/graphql
REACT_APP_GRAPHQL_PLAYGROUND=http://localhost:4000/playground
REACT_APP_GRAPHQL_SUBSCRIPTIONS=ws://localhost:4000/graphql

# Temporal Configuration
REACT_APP_TEMPORAL_ADDRESS=localhost:7233
REACT_APP_TEMPORAL_UI_ADDRESS=http://localhost:8233

# Application Configuration
REACT_APP_ENVIRONMENT=local
REACT_APP_VERSION=0.1.0
REACT_APP_DEBUG=true

# Feature Flags
REACT_APP_ENABLE_GRAPHQL=true
REACT_APP_ENABLE_REAL_TIME_UPDATES=true
REACT_APP_ENABLE_DOCUMENT_PROCESSING=true

# Security (for production)
GENERATE_SOURCEMAP=false
