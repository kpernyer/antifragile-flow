	@echo "ğŸ” Starting Neo4j and Weaviate..."
	@cd service/vector_store && docker-compose -f docker-compose.test.yml up -d
	@echo "â³ Waiting for vector store services to start..."
	@sleep 30
	@echo "âœ… Neo4j running at http://localhost:7474 (neo4j/testpassword)"
	@echo "âœ… Weaviate running at http://localhost:8081"
	@echo "ğŸ§ª Vector store services ready for real capability testing!"
.PHONY: vector-store-setup

